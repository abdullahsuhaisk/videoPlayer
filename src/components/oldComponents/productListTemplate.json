{
  "widgets": [
    {
      "type": "Title",
      "props": {
        "title": "Zara",
        "description": "Spring - Summer 2019 Best Creation",
        "styles": {
          "position": "absolute",
          "top": "25px",
          "left": "50px",
          "width": "50%",
          "height": "100px",
          ".vibuy--title-text": {
            "display": "block",
            "height": "60px",
            "font-family": "Source Sans Pro",
            "font-size": "56px",
            "font-weight": "bold",
            "color": "#FFFC",
            "overflow": "hidden",
            "text-overflow": "ellipsis",
            "white-space": "nowrap"
          },
          ".vibuy--title-description": {
            "display": "block",
            "height": "40px",
            "font-family": "Source Sans Pro",
            "font-size": "12px",
            "color": "#FFFC",
            "overflow": "hidden"
          }
        }
      }
    },
    {
      "type": "ProfileButton",
      "props": {
        "styles": {
          "position": "absolute",
          "top": "30px",
          "left": "810px",
          "cursor": "pointer",
          ".vibuy--profile-button-text": {
            "display": "inline-block",
            "width": "100px",
            "height": "18px",
            "margin-right": "5px",
            "font-family": "Source Sans Pro",
            "font-size": " 12px",
            "text-align": "right",
            "color": "#FFF",
            "white-space": "nowrap",
            "overflow": "hidden",
            "text-overflow": "ellipsis"
          },
          ".vibuy--profile-button-image": {
            "background": "url(/images/user_avatar.svg) center / cover no-repeat",
            "display": "inline-block",
            "width": "24px",
            "height": "24px",
            "border-radius": "50%",
            "border": "1px solid #494949"
          }
        }
      }
    },
    {
      "type": "Tabs",
      "props": {
        "styles": {
          "position": "absolute",
          "top": "126px",
          "left": "50px",
          "width": "900px",
          "height": "300px",
          ".vibuy--tabs": {},
          ".vibuy--tab-list": {},
          ".vibuy--tab": {
            "background-color": "#0000",
            "border-width": "0px 0px 2px 0px",
            "&:focus": {
              "border-color": "#00acd8"
            }
          },
          ".vibuy--tab-selected": {
            "background-color": "#0000",
            "border-width": "0px 0px 2px 0px",
            "border-color": "#00acd8",
            "border-style": "solid",
            "color": "#fff"
          },
          ".vibuy--tab-panel": {}
        },
        "tabs": [
          {
            "id": "tab-1",
            "title": "Products in this scene",
            "children": [
              {
                "type": "Slider",
                "props": {
                  "styles": {
                    "width": "800px",
                    "height": "400px",
                    ".vibuy--slider-next-arrow": {
                      "right": "-100px",
                      "top": "80px",
                      "width": "90px",
                      "height": "90px",
                      "&:before": {
                        "background": "url(/images/sign-right.svg) no-repeat center /contain",
                        "display": "block",
                        "width": "100%",
                        "height": "100%"
                      }
                    },
                    ".vibuy--slider-prev-arrow": {
                      "transform": "scaleX(-1)",
                      "right": "-100px",
                      "top": "180px",
                      "width": "90px",
                      "height": "90px",
                      "&:before": {
                        "background": "url(/images/sign-right.svg) no-repeat center /contain",
                        "display": "block",
                        "width": "100%",
                        "height": "100%"
                      }
                    }
                  },
                  "slides": [
                    {
                      "children": [
                        {
                          "type": "ProductCard",
                          "props": {
                            "basePrice": "200 TL",
                            "discountRate": "%50",
                            "currentPrice": "100 TL",
                            "styles": {
                              "width": "150px",
                              "height": "315px",
                              "border-radius": "5px",
                              "background-color": "#F4F4F8",
                              "margin": "auto",
                              "pointer-events": "auto",
                              ".first-container": {
                                "width": "100%",
                                "height": "60%",
                                "display": "flex",
                                "flex-direction": "column",
                                "align-items": "center",
                                "justify-content": "space-between",
                                "border-radius": "5px",
                                "background": "#00acd8",
                                "cursor": "pointer"
                              },
                              ".product-image": {
                                "width": "100%",
                                "height": "89%",
                                "display": "flex",
                                "align-items": "center",
                                "justify-content": "center",
                                "border-radius": "5px",
                                "background": "white",
                                "cursor": "default",
                                "img": {
                                  "max-width": "100%",
                                  "max-height": "100%",
                                  "border": "none"
                                }
                              },
                              ".add-to-wishlist": {
                                "color": "#FFFC",
                                "margin-bottom": "5px",
                                "font-weight": "bold",
                                "font-size": "10px"
                              },
                              ".second-container": {
                                "width": "100%",
                                "height": "40%",
                                "display": "flex",
                                "flex-direction": "column",
                                "align-items": "center",
                                ".brand": {
                                  "color": "#0009",
                                  "margin-top": "5px",
                                  "font-weight": "bold",
                                  "font-size": "12px"
                                },
                                ".title": {
                                  "color": "#0009",
                                  "padding": "2px",
                                  "font-weight": "bold",
                                  "font-size": "12px"
                                },
                                ".price-container": {
                                  "margin": "10px",
                                  ".discount-rate": {
                                    "float": "left",
                                    "width": "24px",
                                    "height": "15px",
                                    "display": "flex",
                                    "align-items": "center",
                                    "justify-content": "center",
                                    "background-color": "#D53738",
                                    "font-weight": "bold",
                                    "border-radius": "5px",
                                    "span": {
                                      "font-size": "10px"
                                    }
                                  },
                                  ".base-price": {
                                    "display": "flex",
                                    "height": "15px",
                                    "align-items": "center",
                                    "justify-content": "center",
                                    "color": "black",
                                    "span": {
                                      "color": "#525153",
                                      "padding-left": "2px",
                                      "font-size": "9px",
                                      "text-decoration": "line-through"
                                    }
                                  },
                                  ".current-price": {
                                    "width": "100%",
                                    "display": "flex",
                                    "align-items": "center",
                                    "justify-content": "center",
                                    "color": "black",
                                    "span": {
                                      "color": "#525153",
                                      "padding": "2px",
                                      "font-size": "18px",
                                      "font-weight": "bold"
                                    }
                                  }
                                },
                                ".price": {
                                  "color": "#525153",
                                  "margin": "15px",
                                  "font-size": "18px",
                                  "font-weight": "bold"
                                },
                                ".in-stock": {
                                  "color": "#00acd8",
                                  "font-size": "10px",
                                  "font-weight": "bold"
                                },
                                "hr": {
                                  "width": "50%",
                                  "margin": "3px",
                                  "border-top": "1px solid #00acd8"
                                },
                                ".details": {
                                  "color": "#00acd8",
                                  "font-size": "12px",
                                  "font-weight": "bold"
                                }
                              }
                            }
                          }
                        }
                      ]
                    }
                  ]
                }
              }
            ]
          },
          {
            "id": "tab-2",
            "title": "All products",
            "children": []
          }
        ]
      }
    },
    {
      "type": "Like",
      "props": {
        "styles": {
          "position": "absolute",
          "top": "125px",
          "left": "800px",
          "cursor": "pointer",
          ".vibuy--like-icon": {
            "background": "url(/images/like.svg) center / cover no-repeat",
            "display": "inline-block",
            "width": "18px",
            "height": "18px"
          },
          ".vibuy--like-text": {
            "font-family": "Source Sans Pro",
            "font-size": "12px",
            "text-align": "left",
            "color": "#FFF",
            "position": "absolute",
            "top": "5px",
            "left": "25px"
          }
        }
      }
    },
    {
      "type": "Favorite",
      "props": {
        "styles": {
          "position": "absolute",
          "top": "125px",
          "left": "855px",
          "cursor": "pointer",
          ".vibuy--favorite-icon": {
            "background": "url(/images/favorite.svg) center / cover no-repeat",
            "display": "inline-block",
            "width": "20px",
            "height": "18px"
          },
          ".vibuy--favorite-text": {
            "font-family": "Source Sans Pro",
            "font-size": "12px",
            "text-align": "left",
            "color": "#FFF",
            "position": "absolute",
            "top": "5px",
            "left": "25px"
          }
        }
      }
    },
    {
      "type": "Share",
      "props": {
        "styles": {
          "position": "absolute",
          "top": "125px",
          "left": "910px",
          "cursor": "pointer",
          ".vibuy--share-icon": {
            "background": "url(/images/share.svg) center / cover no-repeat",
            "display": "inline-block",
            "width": "18px",
            "height": "18px"
          },
          ".vibuy--share-text": {
            "font-family": "Source Sans Pro",
            "font-size": "12px",
            "text-align": "left",
            "color": "#FFF",
            "position": "absolute",
            "top": "5px",
            "left": "25px"
          }
        }
      }
    }
  ]
}
